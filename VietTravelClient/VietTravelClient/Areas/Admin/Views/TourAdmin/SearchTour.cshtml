@{
    ViewData["Title"] = "Tìm kiếm Tour";
    List<Tour> tours = (List<Tour>)ViewData["Tours"];
}
<body>
    <div class="row" style="padding-top: 20px;">
        <div class="col-4 col-sm-4 col-md-4">
            <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold" style="font-size: 30px; padding-left: 50px;">
                <img src="~/Icon/logo.jpg" alt="" style="width:100px; height:100px">
                LARS TRAVEL
            </div>
            <form asp-area="Admin" asp-controller="TourAdmin" asp-action="SearchTour" method="post">
                <div class="col-12 col-sm-12 col-md-12 text-info" style="padding-top: 30px; padding-left: 50px;">Tìm kiếm Tour<span style="color: red;">*</span></div>
                <div class="col-10 col-sm-10 col-md-10" style="padding-left: 50px; padding-top: 20px;">
                    <input type="text" class="col-12 col-sm-12 col-md-12 rounded border-info" style="height:60px;" id="searchValue" name="searchValue" placeholder="NHẬP TÊN TOUR" value="">
                    <button class="col-12 col-sm-12 col-md-12 rounded border-info btn btn-info" style="height:60px; margin-top: 20px;">Tìm kiếm</button>
                </div>
            </form>

            <div class="col-10 col-sm-10 col-md-10" style="padding-left: 50px; padding-top: 20px;">
                <a class="col-12 col-sm-12 col-md-12 rounded border-info btn btn-info" style="height:60px; display: flex; align-items: center; justify-content: center;" asp-controller="TourAdmin" asp-action="AddTour">Thêm mới Tour</a>
            </div>
        </div>
        <div class="col-8 col-sm-8 col-md-8">
            <div id="mycarousel" class="carousel slide carousel-fade row rounded" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class=""></li>
                    <li data-target="#mycarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner col-12 col-sm-12 col-md-12">
                    <div class="carousel-item active">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/nhatrangcity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Tiêu đề Slide 1</h5>
                            <p>Dòng text chú thích cho Slide 1</p>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/quangbinhcity.jpg">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/quangninhcity.jpg">
                    </div>
                    <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12">
            <div class="row" style="margin-top: 20px;">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="row">
                        @{
                            foreach (Tour item in tours)
                            {
                                <div class="col-3 col-sm-3 col-md-3" style="margin-bottom:20px;">
                                    <div class="card row">
                                        <img class="card-img-top col-12 col-sm-12 col-md-12" style="width: 80%; height: 60%; margin-left: 10%;"
                                             src="https://vapa.vn/wp-content/uploads/2022/12/anh-3d-thien-nhien-010.jpg" alt="">
                                        <div class="card-body row">
                                            <h5 class="card-title col-12 col-sm-12 col-md-12">@item.Name</h5>
                                            <p class="card-text col-12 col-sm-12 col-md-12">@item.ContentIntroduct</p>
                                            <div class="col-1 col-sm-1 col-md-1"></div>
                                            <a asp-area="Admin" asp-controller="TourAdmin" asp-action="TourInfo" asp-route-TourId="@item.Id" class="btn btn-primary col-4 col-sm-4 col-md-4">Cập nhật</a>
                                            <div class="col-2 col-sm-2 col-md-2"></div>
                                            <a class="btn btn-danger col-4 col-sm-4 col-md-4" data-toggle="modal" data-target="#@item.Id">Xóa</a>
                                            <div id="@item.Id" class="modal fade" tabindex="-1" role="dialog">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Bạn chắc chắn muốn xóa bỏ Tour này</h4>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <label>Tên Tour: </label>
                                                            <p>@item.Name</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Hủy bỏ</button>
                                                            <form asp-area="Admin" asp-controller="TourAdmin" asp-action="DeleteTour" method="post">
                                                                <input type="text" name="TourId" id="TourId" value="@item.Id" hidden />
                                                                <button type="submit" class="btn btn-primary">Xác nhận</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
