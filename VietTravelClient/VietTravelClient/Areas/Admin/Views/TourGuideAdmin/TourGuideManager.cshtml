                                        <input type="text" class="col-12 rounded border-info text-info" style="height: 60px; margin-bottom: 20px;" id="PhoneNumber" name="PhoneNumber">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-12 col-md-12 row">
                                    <div class="col-6 col-sm-6 col-md-6 row" style="padding-right: 20px;">
                                        <label for="CityId" class="text-info font-italic">Thành phố hướng dẫn</label>
                                        <select class="col-12 rounded border-info text-info" style="height: 60px; margin-bottom: 20px;" id="CityId" name="CityId">
                                            @{
                                                foreach (City city in cities)
