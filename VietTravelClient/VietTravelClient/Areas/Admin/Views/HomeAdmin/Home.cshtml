@using VietTravelClient.Models;

@{
    ViewData["Title"] = "Trang chủ";
}

<body>
    <div class="row" style="padding-top: 20px;">
        <div class="col-4 col-sm-4 col-md-4">
            <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold" style="font-size: 30px; padding-left: 50px;">
                <img src="~/Icon/logo.jpg" alt="" style="width:100px; height:100px">
                VIET TRAVEL
            </div>
            <div class="col-10" style="margin-top: 40px; margin-left: 40px;">
                <div class="row">
                    <a asp-area="Admin" asp-controller="CityAdmin" asp-action="CityManage" class="btn btn-outline-info col-5 col-sm-5 col-md-5" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý thành phố</a>
                    <div class="col-2 col-sm-2 col-md-2"></div>
                    <a asp-area="Admin" asp-controller="TourAdmin" asp-action="TourManage" class="btn btn-outline-info col-5 col-sm-5 col-md-5" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý tour</a>
                </div>
                <div class="row">
                    <a asp-area="Admin" asp-controller="HotelAdmin" asp-action="HotelManage" class="btn btn-outline-info col-5 col-sm-5 col-md-5" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý khách sạn</a>
                    <div class="col-2 col-sm-2 col-md-2"></div>
                    <a asp-area="Admin" asp-controller="TourPackageAdmin" asp-action="TourPackageManage" class="btn btn-outline-info col-5 col-sm-5 col-md-5" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý gói tour</a>
                </div>
                <div class="row">
                    <a href="tourGuideManager" class="btn btn-outline-info col-5 col-sm-5 col-md-5" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý hướng dẫn viên</a>
                    <div class="col-2 col-sm-2 col-md-2"></div>
                    <a href="timePackageManager" class="btn btn-outline-info col-5 col-sm-5 col-md-5" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý gói thời gian</a>
                </div>
                <div class="row">
                    <div class="col-1 col-sm-1 col-md-1"></div>
                    <div class="btn-group dropright col-10 col-sm-10 col-md-10">
                        <div class="btn btn-outline-info dropdown-toggle dropdown-toggle-split col-12" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;" data-toggle="dropdown">Thống kê  </div>
                        <div class="dropdown-menu rounded">
                            <a class="dropdown-item text-info" style="height:60px;" asp-area="Admin" asp-controller="HomeAdmin" asp-action="RevenueStatisticDetail">Thống kê theo tháng</a>
                            <a class="dropdown-item text-info" style="height:60px;" asp-area="Admin" asp-controller="HomeAdmin" asp-action="RevenueStatisticDetail">Thống kê theo Tour</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-info" style="height:60px;" asp-area="Admin" asp-controller="HomeAdmin" asp-action="RevenueStatisticDetail">Thống kê theo gói</a>
                        </div>
                    </div>
                </div>
                @*<a href="revenueStatisticsDetail" class="btn btn-outline-info col-10" style="margin-top: 20px; height: 60px; display: flex; align-items: center; justify-content: center;">Quản lý thống kê</a>*@
            </div>
        </div>
        <div class="col-8 col-sm-8 col-md-8">
            <div id="mycarousel" class="carousel slide carousel-fade row rounded" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class=""></li>
                    <li data-target="#mycarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner col-12 col-sm-12 col-md-12">
                    <div class="carousel-item active">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/hanoicity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Tiêu đề Slide 1</h5>
                            <p>Dòng text chú thích cho Slide 1</p>
                        </div>
                    </div>

                    <div class="carousel-item ">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/hagiangcity.jpg">
                    </div>

                    <div class="carousel-item">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/nhatrangcity.jpg">
                    </div>

                    <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span>
                    </a>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1 col-sm-1 col-md-1"></div>
        <div class="col-10 col-sm-10 col-md-10">
            <div class="row" style="margin-top: 20px;">
                <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold font-italic text-center"
                     style="margin-bottom: 20px; font-size: 30px; margin-top: 40px;">
                    CÁC TOUR
                    DU LỊCH MỚI NHẤT
                </div>
                <div class="card-deck">
                    <div class="card col-4 col-sm-4 col-md-4 text-info">
                        <img class="card-img" style="width: 80%; height: 60%; margin-left: 10%;"
                             src="~/UploadImage/hagiangcity.jpg" alt="">
                        <div class="card-body">
                            <h5 class="card-subtitle">Ảnh 4K - Đây là sử dụng tiêu đề phụ</h5>
                            <p class="card-text">Đây là phần nội dung của Card - Thiết lập màu chữ cho card</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                    <div class="card col-4 col-sm-4 col-md-4 text-info">
                        <img class="card-img" style="width: 80%; height: 60%; margin-left: 10%;"
                             src="~/UploadImage/haiphongcity.jpg" alt="">
                        <div class="card-body">
                            <h5 class="card-subtitle">Ảnh 4K - Đây là sử dụng tiêu đề phụ</h5>
                            <p class="card-text">Đây là phần nội dung của Card - Thiết lập màu chữ cho card</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                    <div class="card col-4 col-sm-4 col-md-4 text-info">
                        <img class="card-img" style="width: 80%; height: 60%; margin-left: 10%;"
                             src="~/UploadImage/hanoicity.jpg" alt="">
                        <div class="card-body">
                            <h5 class="card-subtitle">Ảnh 4K - Đây là sử dụng tiêu đề phụ</h5>
                            <p class="card-text">Đây là phần nội dung của Card - Thiết lập màu chữ cho card</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 60px;">
        <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold text-center font-italic" style="font-size: 30px;">
            VIETNAM SO
            BEAUTIFUL
        </div>
        <div class="col-1 col-sm-1 col-md-1"></div>
        <video autoplay loop muted play-inline class="col-10" controls>
            <source src="~/video/vietnam.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 text-center font-italic text-info font-weight-bold"
             style="font-size: 30px; margin-top: 40px; margin-bottom: 30px;">
            LỰA CHỌN ĐIỂM ĐẾN PHÙ HỢP
        </div>
        <div class="col-1 col-sm-1 col-md-1">
        </div>
        <div class="col-10 col-sm-10 col-md-10">
            <div class="row">
                <div class="col-1 col-sm-1 col-md-1"></div>
                <div class="media col-5 col-sm-5 col-md-5 border" style="margin-left: 10px; margin-right: 10px;">
                    <img class="mr-3 rounded order-0 col-6 col-sm-6 col-md-6" style="width: 100%; height: 100%;"
                         src="~/UploadImage/ngheancity.jpg">
                    <div class="media-body col-4 col-sm-4 col-md-4">
                        <h5 class="mt-0 text-info font-italic">NHA TRANG</h5>
                    </div>
                </div>

                <div class="media col-5 col-sm-5 col-md-5 border" style="margin-left: 10px; margin-right: 10px;">
                    <img class="mr-3 rounded order-0 col-6 col-sm-6 col-md-6" style="width: 100%; height: 100%;"
                         src="~/UploadImage/nhatrangcity.jpg">
                    <div class="media-body col-4 col-sm-4 col-md-4">
                        <h5 class="mt-0 text-info font-italic">ĐÀ NẴNG</h5>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col-1 col-sm-1 col-md-1"></div>
                <div class="media col-5 col-sm-5 col-md-5 border" style="margin-left: 10px; margin-right: 10px;">
                    <img class="mr-3 rounded order-0 col-6 col-sm-6 col-md-6" style="width: 100%; height: 100%;"
                         src="~/UploadImage/quangninhcity.jpg">
                    <div class="media-body col-4 col-sm-4 col-md-4">
                        <h5 class="mt-0 text-info font-italic">HÀ NỘI</h5>
                    </div>
                </div>

                <div class="media col-5 col-sm-5 col-md-5 border" style="margin-left: 10px; margin-right: 10px;">
                    <img class="mr-3 rounded order-0 col-6 col-sm-6 col-md-6" style="width: 100%; height: 100%;"
                         src="~/UploadImage/quangbinhcity.jpg">
                    <div class="media-body col-4 col-sm-4 col-md-4">
                        <h5 class="mt-0 text-info font-italic">TP. HỒ CHÍ MINH</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        $('#searchCitySelect').select2({
            allowClear: true, // Cho phép xóa lựa chọn hiện tại
            minimumInputLength: 1, // Số ký tự tối thiểu trước khi bắt đầu tìm kiếm
            width: '100%', // Độ rộng của ô tìm kiếm
            theme: 'classic', // Giao diện của Select2 (classic hoặc default)
            // Các tùy chọn khác...
        });
        $('#searchTourSelect').select2({
            allowClear: true, // Cho phép xóa lựa chọn hiện tại
            minimumInputLength: 1, // Số ký tự tối thiểu trước khi bắt đầu tìm kiếm
            width: '100%', // Độ rộng của ô tìm kiếm
            theme: 'classic', // Giao diện của Select2 (classic hoặc default)
            // Các tùy chọn khác...
        });
    });
</script>