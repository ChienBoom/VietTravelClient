@using VietTravelClient.Models;

@{
    ViewData["Title"] = "Trang chủ";
    List<City> cities = (List<City>)ViewData["Cities"];
    List<Tour> tours = (List<Tour>)ViewData["Tours"];
    List<City> hotCities = (List<City>)ViewData["HotCities"];
    List<Tour> hotTours = (List<Tour>)ViewData["HotTours"];
}
<style>
    .d-flex-icon {
        display: flex;
        align-items: center;
        column-gap: 0.3rem;
    }
</style>
<body>
    <div class="row" style="padding-top: 20px;">
        <div class="col-4 col-sm-4 col-md-4">
            <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold" style="font-size: 30px; padding-left: 50px;">
                <img src="~/Icon/logo.jpg" alt="" style="width:100px; height:100px">
                LALOLI TRAVEL
            </div>
            <div class="col-12 col-sm-12 col-md-12 text-info" style="padding-top: 30px; padding-left: 50px;">SEARCH</div>
            <div class="col-10 col-sm-10 col-md-10" style="padding-left: 50px; padding-top: 20px;">
                <form asp-area="Customer" asp-controller="CityCustomer" asp-action="SearchCityDetailPost" method="post">
                    <label for="searchCitySelect" class="text-info text-center font-italic">Chọn tên Thành phố muốn đến</label>
                    <select name="itemId" id="searchCitySelect" class="col-12 col-sm-12 col-md-12 rounded border-info" style="height:60px;">
                        @{
                            foreach (City city in cities)
                            {
                                <option value="@city.Id">@city.Name</option>
                            }
                        }
                    </select>
                    <input type="text" value="1" name="page" hidden />
                    @*<input type="text" value="@ViewData["stringAccount"]" name="stringAccount" hidden />*@
                    <button type="submit" class="btn btn-info col-12 col-sm-12 col-md-12 rounded border-info" style="height:40px; margin-top: 10px;">Tìm kiếm</button>
                </form>
            </div>
            <div class="text-info text-center col-11 col-sm-11 col-md-11">
                --Or--
            </div>
            <div class="col-10 col-sm-10 col-md-10" style="padding-left: 50px; padding-top: 10px;">
                <form asp-area="Customer" asp-controller="TourCustomer" asp-action="SearchTourDetail" method="post">
                    <label for="searchTourSelect" class="text-info text-center font-italic">Chọn tên Tour muốn đến</label>
                    <select name="itemId" id="searchTourSelect" class="col-12 col-sm-12 col-md-12 rounded border-info" style="height:60px;">
                        @{
                            foreach (Tour tour in tours)
                            {
                                <option value="@tour.Id">@tour.Name</option>
                            }
                        }
                    </select>
                    <input type="text" value="1" name="page" hidden />
                    <button type="submit" class="btn btn-info col-12 col-sm-12 col-md-12 rounded border-info" style="height:40px; margin-top: 10px;">Tìm kiếm</button>
                </form>
            </div>
        </div>
        <div class="col-8 col-sm-8 col-md-8">
            <div id="mycarousel" class="carousel slide carousel-fade row rounded" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class=""></li>
                    <li data-target="#mycarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner col-12 col-sm-12 col-md-12">
                    <div class="carousel-item active">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/hanoicity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Laloli Travel</h5>
                            <p>Đưa bạn đến mọi nẻo đường</p>
                        </div>
                    </div>

                    <div class="carousel-item ">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/hagiangcity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Laloli Travel</h5>
                            <p>Đưa bạn đến mọi nẻo đường</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:500px"
                             src="~/UploadImage/nhatrangcity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Laloli Travel</h5>
                            <p>Đưa bạn đến mọi nẻo đường</p>
                        </div>
                    </div>

                    <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span>
                    </a>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1 col-sm-1 col-md-1"></div>
        <div class="col-10 col-sm-10 col-md-10">
            <div class="row" style="margin-top: 20px;">
                <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold font-italic text-center"
                     style="margin-bottom: 20px; font-size: 30px; margin-top: 40px;">
                    CÁC TOUR
                    DU LỊCH MỚI NHẤT
                </div>
                <div class="card-deck">
                    @{
                        foreach (Tour item in hotTours)
                        {
                            <div class="card col-4 col-sm-4 col-md-4 text-info">
                                <img class="card-img" style="width: 80%; height: 60%; margin-left: 10%;"
                                     src="~/UploadImage/@(item.Pictures)" alt="">
                                <div class="card-body row">
                                    <h5 class="card-title col-12 col-sm-12 col-md-12 text-truncate" data-toggle="tooltip" title="@item.Name" data-placement="top" style="width:50px;">@item.Name</h5>
                                    <p class="card-text col-12 col-sm-12 col-md-12 text-truncate" data-toggle="tooltip" title="@item.TitleIntroduct" data-placement="top" style="width:50px;">@item.ContentIntroduct</p>
                                    <div class="col-12 col-sm-12 col-md-12 row">
                                        <a asp-area="Customer" asp-controller="TourCustomer" asp-action="TourDetail" asp-route-itemId="@item.Id" asp-route-page="1" class="btn btn-primary">Xem Tour</a>
                                        <div class="col-6 col-sm-6 col-md-6 d-flex-icon">@item.NumberOfEvaluate<i class="fa fa-comment" style="color: deepskyblue"></i> @item.MediumStar.ToString("N2")<i class="fa fa-star" style="color: deepskyblue"></i></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 60px;">
        <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold text-center font-italic" style="font-size: 30px;">
            VIETNAM SO
            BEAUTIFUL
        </div>
        <div class="col-1 col-sm-1 col-md-1"></div>
        <video autoplay loop muted play-inline class="col-10" controls>
            <source src="~/video/vietnam.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <div class="row">
        <div class="col-1 col-sm-1 col-md-1"></div>
        <div class="col-10 col-sm-10 col-md-10">
            <div class="row" style="margin-top: 20px;">
                <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold font-italic text-center"
                     style="margin-bottom: 20px; font-size: 30px; margin-top: 40px;">
                    LỰA CHỌN ĐIỂM ĐẾN PHÙ HỢP
                </div>
                <div class="card-deck">
                    @{
                        foreach (City item in hotCities)
                        {
                            <div class="card col-4 col-sm-4 col-md-4 text-info">
                                <img class="card-img" style="width: 80%; height: 60%; margin-left: 10%;"
                                     src="~/UploadImage/@(item.Pictures)" alt="">
                                <div class="card-body row">
                                    <h5 class="card-title col-12 col-sm-12 col-md-12 text-truncate" data-toggle="tooltip" title="@item.Name" data-placement="top" style="width:50px;">@item.Name</h5>
                                    <p class="card-text col-12 col-sm-12 col-md-12 text-truncate" data-toggle="tooltip" title="@item.TitleIntroduct" data-placement="top" style="width:50px;">@item.ContentIntroduct</p>
                                    <div class="col-12 col-sm-12 col-md-12 row">
                                        <a asp-area="Customer" asp-controller="CityCustomer" asp-action="CityDetail" asp-route-itemId="@item.Id" asp-route-page="1" class="btn btn-primary">Xem Thành Phố</a>
                                        <div class="col-6 col-sm-6 col-md-6 d-flex-icon">@item.NumberOfEvaluate<i class="fa fa-comment" style="color: deepskyblue"></i> @item.MediumStar.ToString("N2")<i class="fa fa-star" style="color: deepskyblue"></i></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

</body>
