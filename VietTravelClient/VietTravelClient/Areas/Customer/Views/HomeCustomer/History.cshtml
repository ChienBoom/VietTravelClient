@{
    ViewData["Title"] = "Lịch sử đặt Tour";
    List<Ticket> tickets = (List<Ticket>)ViewData["Tickets"];
    string status = (string)ViewData["Status"];
}
<style>
    .modal-dialog {
        max-width: 800px;
    }
</style>
<body>
    <div class="row" style="margin-top: 40px; margin-bottom: 10px;">
        <div class="col-10">
            <div class="text-info font-italic" style="font-size:30px; margin-left: 100px;">DANH SÁCH TOUR ĐÃ ĐẶT</div>
        </div>
    </div>
    <div class="row" style="margin-top: 40px; margin-bottom: 10px;">
        <div class="col-3 col-sm-3 col-md-3"></div>
            <a asp-area="Customer" asp-controller="HomeCustomer" asp-action="History" asp-route-status="0" asp-route-ticketStatus="1" class="btn-info col-2 col-sm-2 col-md-2 rounded border-info text-center" style="height: 60px; display: flex; align-items: center; justify-content: center; margin-right: 20px;">Chờ thanh toán</a>
            <a asp-area="Customer" asp-controller="HomeCustomer" asp-action="History" asp-route-status="0" asp-route-ticketStatus="2" class="btn-info col-2 col-sm-2 col-md-2 rounded border-info text-center" style="height: 60px; display: flex; align-items: center; justify-content: center; margin-right: 20px;">Đã thanh toán - Chưa hoàn thành Tour</a>
            <a asp-area="Customer" asp-controller="HomeCustomer" asp-action="History" asp-route-status="0" asp-route-ticketStatus="3" class="btn-info col-2 col-sm-2 col-md-2 rounded border-info text-center" style="height: 60px; display: flex; align-items: center; justify-content: center;">Đã thanh toán - Hoàn thành Tour</a>
    </div>
    <div class="row">
        @*Status*@
        <div hidden>
            <input type="text" id="Status" value="@status" />
        </div>

        <div class="col-1"></div>
        <table class="col-10 col-sm-10 col-md-10 border" style="border: 1px; border-color: black;">
            <tr class="">
                <th style="width : 3%" class="text-center bg-info text-light border">STT</th>
                <th style="width : 17%" class="text-center bg-info text-light border">Tên Tour</th>
                <th style="width : 18%" class="text-center bg-info text-light border">Ngày đặt Tour</th>
                <th style="width : 15%" class="text-center bg-info text-light border">Giá Tour</th>
                <th style="width : 25%" class="text-center bg-info text-light border">Trạng thái</th>
                <th style="width : 27%" class="text-center bg-info text-light border"></th>
            </tr>
            @{
                for (int i = 0; i < tickets.Count; i++)
                {
                    Ticket item = tickets[i];
                    <tr>
                        <td class="text-center border">@(i + 1)</td>
                        <td class="text-center border">@item.TourPackage.Tour.Name</td>
                        <td class="text-center border">@item.BookingDate</td>
                        <td class="text-center border">@item.TourPackage.LastPrice.ToString("N2")</td>
                        @{
                            switch (item.Status)
                            {
                                case 1:
                                    <td class="text-center border">Chưa thanh toán</td>
                                    break;
                                case 2:
                                    <td class="text-center border">Đã thanh toán - chưa hoàn thành Tour</td>
                                    break;
                                case 3:
                                    <td class="text-center border">Đã thanh toán - Hoàn thành Tour</td>
                                    break;
                            }
                        }
                        <td class="text-center border"><button class="btn btn-info" data-toggle="modal" style="margin-right: 2px;" data-target="#TicketDetail@(item.Id)">Xem</button><button class="btn btn-info" style="margin-right: 2px;" data-toggle="modal" data-target="#DeleteTicket@(item.Id)">Hủy Tour</button><button class="btn btn-info" data-toggle="modal" data-target="#Pay@(item.Id)">Thanh toán</button></td>
                    </tr>

                    <div id="TicketDetail@(item.Id)" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content" style="padding-left: 40px;">
                                <div class="modal-header">
                                    <h4 class="modal-title text-info">CHI TIẾT THÔNG TIN TOUR</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form>
                                    <div class="modal-body row">
                                        <div class="col-12 col-sm-12 col-md-12 row">
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-right: 20px;">
                                                <label for="NumberOfAdult" class="text-info font-italic">Số lượng người lớn</label>
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="NumberOfAdult" name="NumberOfAdult" value="@item.TourPackage.NumberOfAdult" disabled>
                                            </div>
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-left: 20px;">
                                                <label for="NumberOfChildren" class="text-info font-italic">Số lượng trẻ em</label>
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="NumberOfChildren" name="NumberOfChildren" value="@item.TourPackage.NumberOfChildren" disabled>
                                            </div>
                                        </div>
                                        <div class="col-12 col-sm-12 col-md-12 row">
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-right: 20px;">
                                                <label for="StartTime" class="text-info font-italic">Thời gian khởi hành</label>
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="StartTime" name="StartTime" value="@item.TourPackage.StartTime" disabled>
                                            </div>
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-left: 20px;">
                                                <label for="EndTime" class="text-info font-italic">Thời gian kết thúc</label>
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="EndTime" name="EndTime" value="@item.TourPackage.EndTime" disabled>
                                            </div>
                                        </div>
                                        <div class="col-12 col-sm-12 col-md-12 row">
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-right: 20px;">
                                                <label for="Hotel" class="text-info font-italic">Khách sạn</label>
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="Hotel" name="Hotel" value="@item.TourPackage.Hotel.Name" disabled>
                                            </div>
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-left: 20px;">
                                                <label for="Restaurant" class="text-info font-italic">Nhà hàng</label>
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="Restaurant" name="Restaurant" value="@item.TourPackage.Restaurant.Name" disabled>
                                            </div>
                                        </div>
                                        @{
                                            string lstScheduleName = "";
                                            foreach (Schedule schedule in item.TourPackage.ScheduleTourPackages)
                                            {
                                                lstScheduleName += schedule.Title + " - ";
                                            }
                                            lstScheduleName = lstScheduleName.Substring(0, lstScheduleName.Length - 3);
                                            <div class="col-12 col-sm-12 col-md-12 row">
                                                <div class="col-12 col-sm-12 col-md-12 row" style="padding-right: 20px;">
                                                    <label for="Hotel" class="text-info font-italic">Lịch trình</label>
                                                    <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="LstSchedule" name="LstSchedule" value="@lstScheduleName" disabled>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-info" data-dismiss="modal">Thoát</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div id="DeleteTicket@(item.Id)" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content" style="padding-left: 40px;">
                                <div class="modal-header">
                                    <h4 class="modal-title text-warning">THÔNG BÁO</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form asp-area="Customer" asp-controller="TicketCustomer" asp-action="DeleteTicket" method="post">
                                    <div class="modal-body row">
                                        <div class="col-12 col-sm-12 col-md-12 row">
                                            <p>BẠN CHẮC CHẮN MUỐN HỦY TOUR NÀY?</p>
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-left: 20px;">
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="Id" name="Id" value="@item.Id" hidden>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-info" data-dismiss="modal">Hủy</button>
                                        <button type="submit" class="btn btn-primary">Đồng ý</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div id="Pay@(item.Id)" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content" style="padding-left: 40px;">
                                <div class="modal-header">
                                    <h4 class="modal-title text-warning">THÔNG BÁO</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form asp-area="Customer" asp-controller="TicketCustomer" asp-action="DeleteTicket" method="post">
                                    <div class="modal-body row">
                                        <div class="col-12 col-sm-12 col-md-12 row">
                                            <p class="col-12 col-sm-12 col-md-12">BẠN MUỐN THANH TOÁN CHO TOUR NÀY?</p>
                                            <p class="col-12 col-sm-12 col-md-12">GIÁ TRỊ THANH TOÁN LÀ: @item.TourPackage.LastPrice.ToString("N2") VNĐ</p>
                                            <p class="col-12 col-sm-12 col-md-12">NGÂN HÀNG: AGRIBANK</p>
                                            <p class="col-12 col-sm-12 col-md-12">SỐ TÀI KHOẢN: 88889999</p>
                                            <p class="col-12 col-sm-12 col-md-12">NGƯỜI NHẬN: VIETTRAVEL</p>
                                            <img src="~/UploadImage/VIETTRAVEL.png" style="width: 400px; height: 400px; margin-left: 160px;"/>
                                            <div class="col-6 col-sm-6 col-md-6 row" style="padding-left: 20px;">
                                                <input type="text" class="col-12 rounded border-info" style="height: 60px; margin-bottom: 20px;" id="Id" name="Id" value="@item.Id" hidden>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-info" data-dismiss="modal">Thoát</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                }
            }
        </table>
    </div>



    @*Modal bootstrap*@
    <div class="modal" id="Warning">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-warning">THÔNG BÁO</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="WarningMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>

    @*Modal bootstrap*@
    <div class="modal" id="StatusModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-warning">THÔNG BÁO</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="StatusMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        var status = $("#Status").val();
        switch (status) {
            case "BookingTourSuccess":
                $('#StatusMessage').text("ĐẶT TOUR THÀNH CÔNG")
                $('#StatusModal').modal('show');
                break;
            case "BookingTourFaild":
                $('#StatusMessage').text("ĐẶT TOUR THẤT BẠI")
                $('#StatusModal').modal('show');
                break;
            case "DeleteTourSuccess":
                $('#StatusMessage').text("HUỶ TOUR THÀNH CÔNG")
                $('#StatusModal').modal('show');
                break;
            case "DeleteTourFaild":
                $('#StatusMessage').text("HUỶ TOUR THẤT BẠI")
                $('#StatusModal').modal('show');
                break;
            case "ServerError":
                $('#StatusMessage').text("LỖI SERVER")
                $('#StatusModal').modal('show');
                break;
        }
    });
</script>