@{
    ViewData["Title"] = "Quên mật khẩu";
}
<body>
    <div class="row" style="padding-top: 20px;">
        <div class="col-4 col-sm-4 col-md-4">
            <div class="col-12 col-sm-12 col-md-12 text-info font-weight-bold" style="font-size: 30px; padding-left: 50px;">
                <img src="~/Icon/logo.jpg" alt="" style="width:100px; height:100px">
                LALOLI TRAVEL
            </div>
            <div class="col-12 col-sm-12 col-md-12 text-info" style="padding-top: 80px; padding-left: 50px;">XÁC NHẬN EMAIL</div>
            <form asp-controller="Login" asp-action="RecoverPassword" class="col-10 col-sm-10 col-md-10" style="padding-left: 50px;" method="post" onsubmit="return Validation()">
                <div class="" style="padding-top: 20px;">
                    <input name="EmailAccount" id="EmailAccount" type="text" class="col-12 col-sm-12 col-md-12 rounded border-info" style="height:60px;" placeholder="NHẬP EMAIL">
                </div>
                <button type="submit" class="col-12 col-sm-12 col-md-12 rounded border-info btn-info shadow-sm" style="height:60px; margin-top: 20px;">XÁC NHẬN</button>
            </form>
        </div>
        <div class="col-8 col-sm-8 col-md-8">
            <div id="mycarousel" class="carousel slide carousel-fade row rounded" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class=""></li>
                    <li data-target="#mycarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner col-12 col-sm-12 col-md-12">
                    <div class="carousel-item active">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:600px"
                             src="~/UploadImage/nhatrangcity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>LALOLITRAVEL</h5>
                            <p>Đưa bạn đến mọi nẻo đường</p>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:600px"
                             src="~/UploadImage/canthocity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>LALOLITRAVEL</h5>
                            <p>Đưa bạn đến mọi nẻo đường</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block col-12 col-sm-12 col-md-12" style="height:600px"
                             src="~/UploadImage/quangbinhcity.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>LALOLITRAVEL</h5>
                            <p>Đưa bạn đến mọi nẻo đường</p>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

        @*Modal bootstrap*@
    <div class="modal" id="Warning">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-info">THÔNG BÁO</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="WarningMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    function Validation(){
        var email = $('#EmailAccount').val();
        if(email == ""){
            ShowMessage("Vui lòng nhập Email")
            return false;
        }
    }
    function ShowMessage(value) {
        $('#WarningMessage').text(value)
        $('#Warning').modal('show');
    }
</script>